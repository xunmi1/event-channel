{
  "name": "light-event",
  "version": "1.0.0",
  "description": "light-event",
  "license": "MIT",
  "author": "xunmi",
  "main": "dist/light-event.umd.js",
  "module": "dist/light-event.esm.js",
  "types": "dist/light-event.d.ts",
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xunmi1/light-event.git"
  },
  "homepage": "https://github.com/xunmi1/light-event#readme",
  "scripts": {
    "build": "npm run build-ts && npm run build-rollup && npm run build-dts && rimraf .cache",
    "build-ts": "rimraf .cache && tsc -p tsconfig.json --outDir .cache",
    "build-rollup": "rimraf dist && rollup -c scripts/rollup.config.js  -i .cache/index.js",
    "build-dts": "api-extractor run --local --typescript-compiler-folder \"node_modules/typescript\"",
    "lint": "prettier --write --parser typescript \"src/**/*.ts\""
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.8.15",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@xunmi/prettier-config": "^1.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^6.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  }
}
